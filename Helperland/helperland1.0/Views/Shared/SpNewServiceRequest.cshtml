@model IEnumerable<helperland1._0.ViewModel.SPDashboard>;



<div id="NewServiceRequest" class="tab-contant">

    <div class="clearfix">
        @*<div class="d-flex justify-content-between">
            <p class="alignleft "> Customer Service Request </p>

            <a asp-controller="Customer" asp-action="BookService"> <button class="alignright ">Add new request</button></a>

        </div>*@
        <input type="checkbox" id="newRequestPet" style="margin-left:2%; transform: scale(1.5); " checked="checked">
        <label for="vehicle1"> Include pet at home </label><br><br />



        <table id="SPServiceRequestTable" class="table">


            <thead class="table-light">
                <tr class="text-center">
                    <th scope="col" style="width:10%">  ID</th>
                    <th scope="col" style="width:20%"> Service Date</th>
                    <th scope="col" style="width:30%"> Customer Details</th>
                    <th scope="col" style="width:15%"> Payment</th>
                    <th scope="col" style="width:15%">  Conflict</th>
                    <th scope="col" style="width:10%"> Actions</th>
                </tr>
            </thead>
            <tbody>

                @if (Model.Count() > 0)
                {
                    @foreach (var item in Model)
                    {

                        <tr class="text-center" data-value=@item.ServiceRequestId>

                            <td data-label="Service ID">@item.ServiceRequestId</td>
                            <td data-label="Service Date">

                                <div>
                                    <span><img src="/image/calendar2.png" alt=""></span>
                                    <span class="upcoming-date"><b>@item.Date</b></span>
                                </div>
                                <div>
                                    <span><img src="/image/layer-14.png" alt=""></span>
                                    <span>@item.StartTime - @item.EndTime</span>
                                </div>
                            </td>
                            <td class="text-start" data-lable="Customer Details">
                                <div class="ms-4">@item.CustomerName</div>
                                <div class="d-flex"><span><img class="me-0" src="/image/layer-15.png" alt=""></span> <span>@item.Address </span> <span class="d-none">@item.HasPet </span></div>
                            </td>

                            <td data-lable="Payment" class="price">
                                <span>@item.TotalCost</span> &euro;
                            </td>
                            <td data-lable="Time Conflict">
                                @{
                                    string conflictIdtemp = "Conflict" + @item.ServiceRequestId;
                                }
                                <a class="newReqConflictBtn d-none" id=@conflictIdtemp>Conflict</a>
                            </td>
                            <td data-lable="Actions">
                                <a class="newReqAcceptBtn">Accept</a>
                            </td>

                        </tr>


                    }
                }



            </tbody>


        </table>


    </div>


</div>




